<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.calendar.CalendarActivity">
    <com.applandeo.materialcalendarview.CalendarView
            android:id="@+id/calendar_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/calendar_view_margin"
            app:type="one_day_picker"
            app:eventsEnabled="true"
            app:headerColor="@android:color/black"
    />
    <FrameLayout
            android:id="@+id/calendarHeader"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bar_view_height"
            android:background="@android:color/black">
        <ImageView
                android:id="@+id/back"
                android:layout_width="@dimen/medium_img_item_size"
                android:layout_height="@dimen/medium_img_item_size"
                android:layout_marginStart="@dimen/small_margin_size"
                android:layout_gravity="center|left"
                android:src="@drawable/back"/>
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:orientation="horizontal"
                      android:layout_gravity="center"
        >
            <TextView
                    android:id="@+id/month_text"
                    style="@style/WTitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="July"/>
            <ImageView
                    android:id="@+id/open_calendar"
                    android:layout_width="@dimen/medium_img_item_size"
                    android:layout_height="@dimen/medium_img_item_size"
                    android:layout_gravity="center"
                    android:padding="@dimen/mini_margin_size"
                    android:src="@drawable/img_top_arrow_primary"/>

        </LinearLayout>
        <ImageView
                android:id="@+id/today"
                android:layout_width="@dimen/medium_img_item_size"
                android:layout_height="@dimen/medium_img_item_size"
                android:layout_marginEnd="@dimen/mini_margin_size"
                android:layout_gravity="right|center"
                android:src="@drawable/img_today"/>
    </FrameLayout>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/event_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:layout_below="@+id/calendar_view"/>
</RelativeLayout>