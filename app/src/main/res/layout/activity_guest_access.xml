<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.auth.GuestAccessActivity"
        android:background="@drawable/img_background">
    <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/medium_img_item_size"
            android:layout_height="@dimen/medium_img_item_size"
            android:src="@drawable/back"
            android:layout_marginStart="@dimen/medium_margin_size"
            android:layout_marginTop="@dimen/medium_margin_size"/>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            card_view:cardBackgroundColor="@android:color/white"
            card_view:cardCornerRadius="@dimen/radius_value"
            card_view:cardElevation="0dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/big_margin_size"
            android:layout_marginEnd="@dimen/big_margin_size" >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TitleText"
                    android:text="@string/guest_access"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/big_margin_size"
                    android:layout_marginTop="@dimen/top_view_margin_size"
                    android:layout_marginEnd="@dimen/big_margin_size"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/DescriptionView"
                    android:text="@string/skip_registration"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/big_margin_size"
                    android:layout_marginTop="@dimen/medium_margin_size"
                    android:layout_marginEnd="@dimen/big_margin_size"/>
            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/big_margin_size"
                    android:layout_marginTop="@dimen/medium_margin_size"
                    android:layout_marginEnd="@dimen/big_margin_size">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/DescriptionView"
                        android:text="@string/middle_dot"
                        android:layout_gravity="center|left"
                        android:gravity="center"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/DescriptionView"
                        android:text="@string/view_upcoming_holidays"
                        android:gravity="center|left"
                        android:layout_gravity="center|left"
                        android:layout_marginStart="@dimen/medium_margin_size"/>
            </FrameLayout>
            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/big_margin_size"
                    android:layout_marginTop="@dimen/mini_margin_size"
                    android:layout_marginEnd="@dimen/big_margin_size">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/middle_dot"
                        style="@style/DescriptionView"
                        android:layout_gravity="center|left"
                        android:gravity="center"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/DescriptionView"
                        android:text="@string/receive_updates"
                        android:gravity="center|left"
                        android:layout_marginStart="@dimen/medium_margin_size"
                        android:layout_gravity="center|left"/>
            </FrameLayout>
            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/big_margin_size"
                    android:layout_marginTop="@dimen/mini_margin_size"
                    android:layout_marginEnd="@dimen/big_margin_size">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/DescriptionView"
                        android:text="@string/middle_dot"
                        android:layout_gravity="center|left"
                        android:gravity="center"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/DescriptionView"
                        android:text="@string/find_answers_resources"
                        android:gravity="center|left"
                        android:layout_marginStart="@dimen/medium_margin_size"
                        android:layout_gravity="center|left"/>
            </FrameLayout>
            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/big_margin_size"
                    android:layout_marginTop="@dimen/mini_margin_size"
                    android:layout_marginEnd="@dimen/big_margin_size">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/middle_dot"
                        style="@style/DescriptionView"
                        android:layout_gravity="center|left"
                        android:gravity="center"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/DescriptionView"
                        android:text="@string/send_message_to_our_team"
                        android:gravity="center|left"
                        android:layout_marginStart="@dimen/medium_margin_size"
                        android:layout_gravity="center|left"/>
            </FrameLayout>
            <TextView
                    android:id="@+id/continue_guest"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bar_view_height"
                    style="@style/ButtonView"
                    android:layout_marginStart="@dimen/big_margin_size"
                    android:layout_marginTop="@dimen/top_view_margin_size"
                    android:layout_marginEnd="@dimen/big_margin_size"
                    android:layout_marginBottom="@dimen/big_margin_size"
                    android:text="@string/continue_as_guest"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>