<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_background"
        tools:context=".activity.dashboard.ActionDashboardActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/status_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_view_height"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <ImageView
                android:layout_width="@dimen/guest_logo_width"
                android:layout_height="match_parent"
                android:src="@drawable/img_action_logo"
                android:padding="@dimen/mini_margin_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
        />
        <ImageView
                android:id="@+id/register"
                android:layout_width="@dimen/medium_item_view_height"
                android:layout_height="@dimen/medium_item_view_height"
                android:src="@drawable/img_register"
                android:layout_marginEnd="@dimen/small_margin_size"
                android:layout_marginStart="@dimen/small_margin_size"
                android:layout_marginTop="@dimen/mini_margin_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
        />
        <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/MainText"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/register"
                android:text="@string/register"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/main_text_size"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <FrameLayout
            android:id="@+id/selection_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_view_height"
            android:layout_marginStart="@dimen/small_margin_size"
            android:layout_marginEnd="@dimen/small_margin_size"
            android:layout_marginTop="@dimen/medium_margin_size"
            android:background="@drawable/back_round_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/status_bar">
        <TextView
                android:id="@+id/alert_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/MainText"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/main_text_size"
                android:text="CAFE HENRIETTA"
                android:gravity="center"
                android:layout_gravity="center|left"
                android:layout_marginStart="@dimen/bar_view_height"
        />
        <ImageView
                android:layout_width="@dimen/medium_item_view_height"
                android:layout_height="@dimen/medium_item_view_height"
                android:layout_gravity="center|left"
                android:src="@drawable/img_alert"
                android:layout_marginStart="@dimen/mini_margin_size"/>
    </FrameLayout>
    <include
            android:id="@+id/date_view"
            layout="@layout/include_upcoming_holidays">
    </include>
    <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_margin_size"
            android:layout_marginEnd="@dimen/small_margin_size"
            android:layout_marginTop="@dimen/medium_margin_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/date_view"
            card_view:cardBackgroundColor="@android:color/white"
            card_view:cardCornerRadius="@dimen/radius_value"
            card_view:cardElevation="0dp" >
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:id="@+id/linearlayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent">
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:orientation="vertical">
                    <TextView
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              style="@style/TitleText"
                              android:text="@string/need_help"
                              android:gravity="center|left"
                              android:layout_marginStart="@dimen/medium_margin_size"
                              android:layout_marginTop="@dimen/medium_margin_size"/>
                    <TextView
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              style="@style/DescriptionView"
                              android:layout_marginStart="@dimen/medium_margin_size"
                              android:layout_marginTop="@dimen/medium_margin_size"
                              android:text="@string/start_conversation"
                              android:gravity="center|left"/>
                </LinearLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4">
                    <TextView
                            android:id="@+id/message_us"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/item_view_height"
                            style="@style/ButtonView"
                            android:layout_marginStart="@dimen/medium_margin_size"
                            android:layout_marginTop="@dimen/top_view_margin_size"
                            android:gravity="center"
                            android:layout_marginEnd="@dimen/medium_margin_size"
                            card_view:layout_constraintStart_toStartOf="parent"
                            card_view:layout_constraintEnd_toEndOf="parent"
                            card_view:layout_constraintTop_toTopOf="parent"
                            android:textColor="@android:color/white"
                            android:text="@string/message_us"/>
                    <TextView
                            android:layout_width="@dimen/medium_item_view_height"
                            android:layout_height="@dimen/medium_item_view_height"
                            style="@style/MainText"
                            android:background="@drawable/img_message_alarm"
                            android:layout_marginTop="@dimen/medium_margin_size"
                            android:layout_marginEnd="@dimen/small_margin_size"
                            android:layout_alignParentTop="true"
                            android:gravity="center|top"
                            card_view:layout_constraintEnd_toEndOf="parent"
                            card_view:layout_constraintTop_toTopOf="parent"
                            android:textColor="@android:color/white"
                            android:text="3"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
            <TextView
                    android:id="@+id/support_center"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bar_view_height"
                    style="@style/MainText"
                    android:layout_marginTop="@dimen/top_view_margin_size"
                    android:background="@drawable/back_shape"
                    android:textColor="@android:color/black"
                    android:text="@string/support_center"
                    android:gravity="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintTop_toBottomOf="@id/linearlayout1"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>