<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/img_green_background"
        tools:context=".activity.dashboard.ActionDashboardActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/status_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_view_height">
        <ImageView
                android:layout_width="@dimen/guest_logo_width"
                android:layout_height="match_parent"
                android:src="@drawable/img_blue_iws_logo"
                android:padding="@dimen/mini_margin_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
        />
        <ImageView
                android:id="@+id/setting"
                android:layout_width="@dimen/medium_item_view_height"
                android:layout_height="@dimen/medium_item_view_height"
                android:src="@drawable/img_settings"
                android:layout_marginEnd="@dimen/small_margin_size"
                android:layout_marginStart="@dimen/small_margin_size"
                android:layout_marginTop="@dimen/mini_margin_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
        />
        <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/MainText"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/setting"
                tools:text="Hi,Randy!"
                android:gravity="center"
                android:textColor="@android:color/white"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <FrameLayout
            android:id="@+id/selection_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_view_height"
            android:layout_marginStart="@dimen/small_margin_size"
            android:layout_marginEnd="@dimen/small_margin_size"
            android:layout_marginTop="@dimen/medium_margin_size"
            android:background="@drawable/back_round">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/MainText"
                android:textColor="@android:color/white"
                tools:text="CAFE HENRIETTA"
                android:layout_gravity="center|left"
                android:layout_marginStart="@dimen/medium_margin_size"
        />
        <ImageView
                android:layout_width="@dimen/img_item_size"
                android:layout_height="@dimen/img_item_size"
                android:layout_gravity="center|right"
                android:src="@drawable/img_top_arrow"
                android:layout_marginEnd="@dimen/medium_margin_size"/>
    </FrameLayout>
    <include
            android:id="@+id/date_view"
            layout="@layout/include_collection_date">
    </include>
    <include layout="@layout/include_help"/>
</LinearLayout>