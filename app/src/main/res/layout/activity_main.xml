<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.auth.WelcomeActivity"
        android:background="@drawable/img_background">
    <RelativeLayout
            android:layout_width="@dimen/main_left_view_width"
            android:layout_height="@dimen/main_left_view_height"
            android:layout_marginStart="@dimen/main_left_view_margin">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_left_rectangle"/>
        <ImageView
                android:layout_width="@dimen/guest_logo_width"
                android:layout_height="@dimen/guest_logo_width"
                android:src="@drawable/img_logo"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/guest_logo_width"
                android:layout_marginStart="@dimen/main_left_view_margin_end"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="@dimen/main_right_view_width"
            android:layout_height="@dimen/main_right_view_height"
            android:layout_marginEnd="@dimen/main_right_view_margin"
            android:layout_alignParentRight="true">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_right_rectangle"/>
        <ImageView
                android:layout_width="@dimen/guest_logo_width"
                android:layout_height="@dimen/guest_logo_width"
                android:src="@drawable/img_group_logo"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="@dimen/main_right_view_margin_end"/>
    </RelativeLayout>
    <include layout="@layout/include_activity_sign"></include>
    <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MainText"
            android:textColor="@android:color/white"
            android:textSize="@dimen/medium_text_size"
            android:text="@string/register"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/medium_margin_size"
            android:layout_marginBottom="@dimen/small_margin_size"/>
    <TextView
            android:id="@+id/guest_access"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MainText"
            android:textColor="@android:color/white"
            android:textSize="@dimen/medium_text_size"
            android:text="@string/guest_access"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/medium_margin_size"
            android:layout_marginBottom="@dimen/small_margin_size"/>
</RelativeLayout>
