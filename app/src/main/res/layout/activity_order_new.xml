<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.service.OrderNewActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <com.actionCartingEnvironmental.action.view.TitleView
                android:layout_width="match_parent"
                android:layout_height="@dimen/bar_view_height"
                app:title="@string/order_new_container"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/site"
                style="@style/DescriptionView"
                android:layout_marginTop="@dimen/small_margin_size"
                android:layout_marginStart="@dimen/small_margin_size"/>
        <com.actionCartingEnvironmental.action.view.ServiceSpinner
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_view_height"
                android:layout_margin="@dimen/small_margin_size"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/MainText"
                android:text="@string/container_size_quality"
                android:textColor="@android:color/black"
                android:layout_marginTop="@dimen/small_margin_size"
                android:layout_marginStart="@dimen/small_margin_size"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_margin="@dimen/small_margin_size">
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                <LinearLayout 
                        android:layout_width="match_parent" 
                        android:layout_height="@dimen/medium_img_item_size"
                        android:layout_marginBottom="@dimen/mini_margin_size"
                        android:orientation="horizontal">
                    <RadioButton 
                            android:layout_width="wrap_content" 
                            android:layout_height="@dimen/small_item_view_height"
                            android:layout_gravity="center"
                            />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            style="@style/MainText"
                            android:gravity="center|left"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"
                            android:text="20 Cubic Yards"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/medium_img_item_size"
                        android:layout_marginBottom="@dimen/mini_margin_size"
                        android:orientation="horizontal">
                    <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/small_item_view_height"
                            android:layout_gravity="center"
                    />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            style="@style/MainText"
                            android:gravity="center|left"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"
                            android:text="20 Cubic Yards"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/medium_img_item_size"
                        android:layout_marginBottom="@dimen/small_margin_size"
                        android:orientation="horizontal">
                    <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/small_item_view_height"
                            android:layout_gravity="center"
                    />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            style="@style/MainText"
                            android:gravity="center|left"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"
                            tools:text="10 Cubic Yards"/>
                </LinearLayout>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        style="@style/MainText"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:text="@string/quantity"
                        android:layout_marginBottom="@dimen/mini_margin_size"
                />
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_view_height"
                        style="@style/BorderInputText"
                        android:layout_marginEnd="@dimen/big_margin_size"/>
            </LinearLayout>
            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/small_margin_size"
                    android:layout_marginStart="@dimen/small_margin_size"
                    android:background="@drawable/back_edittext">
                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitCenter"
                            android:layout_margin="@dimen/mini_margin_size"
                            android:src="@drawable/img_sample"/>
            </RelativeLayout>
        </LinearLayout>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/DescriptionView"
                android:text="@string/requested_dropoff_date"
                android:layout_marginTop="@dimen/small_margin_size"
                android:layout_marginStart="@dimen/small_margin_size"/>
        <com.actionCartingEnvironmental.action.view.ServiceSpinner
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_view_height"
                android:layout_margin="@dimen/small_margin_size"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/DescriptionView"
                android:text="@string/requested_dropoff_time"
                android:layout_marginTop="@dimen/small_margin_size"
                android:layout_marginStart="@dimen/small_margin_size"/>
        <com.actionCartingEnvironmental.action.view.ServiceSpinner
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_view_height"
                android:layout_margin="@dimen/small_margin_size"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/site_contact"
                style="@style/DescriptionView"
                android:layout_marginTop="@dimen/small_margin_size"
                android:layout_marginStart="@dimen/small_margin_size"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_view_height"
                style="@style/BorderInputText"
                android:layout_margin="@dimen/small_margin_size"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/DescriptionView"
                android:text="@string/site_contact_phone"
                android:layout_marginTop="@dimen/small_margin_size"
                android:layout_marginStart="@dimen/small_margin_size"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_view_height"
                style="@style/BorderInputText"
                android:layout_margin="@dimen/small_margin_size"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/DescriptionView"
                android:text="@string/po_number"
                android:layout_marginTop="@dimen/small_margin_size"
                android:layout_marginStart="@dimen/small_margin_size"/>
        <com.actionCartingEnvironmental.action.view.ServiceSpinner
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_view_height"
                android:layout_margin="@dimen/small_margin_size"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/DescriptionView"
                android:text="@string/description_tems"
                android:layout_marginTop="@dimen/small_margin_size"
                android:layout_marginStart="@dimen/small_margin_size"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/area_view_height"
                style="@style/BorderInputText"
                android:layout_margin="@dimen/small_margin_size"/>
        <TextView
                android:id="@+id/done"
                android:layout_width="match_parent"
                style="@style/ButtonView"
                android:backgroundTint="@color/colorPrimary"
                android:text="@string/submit_request"
                android:layout_height="@dimen/item_view_height"
                android:layout_margin="@dimen/small_margin_size"/>
    </LinearLayout>
</ScrollView>