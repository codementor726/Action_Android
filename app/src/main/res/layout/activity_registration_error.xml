<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.auth.RegistrationErrorActivity"
        android:background="@drawable/img_background">
    <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/medium_img_item_size"
            android:layout_height="@dimen/medium_img_item_size"
            android:src="@drawable/back"
            android:layout_marginStart="@dimen/medium_margin_size"
            android:layout_marginTop="@dimen/medium_margin_size"/>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            card_view:cardBackgroundColor="@android:color/white"
            card_view:cardCornerRadius="@dimen/radius_value"
            card_view:cardElevation="0dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/big_margin_size"
            android:layout_marginEnd="@dimen/big_margin_size" xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <ImageView
                    android:layout_width="@dimen/big_img_item_size"
                    android:layout_height="@dimen/big_img_item_size"
                    android:src="@drawable/img_warning"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/small_margin_size"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/unable_to_verify"
                    style="@style/TitleText"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/big_margin_size"
                    android:layout_marginTop="@dimen/medium_margin_size"
                    android:layout_marginEnd="@dimen/big_margin_size"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/DescriptionView"
                    android:text="@string/unable_verify_description"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/big_margin_size"
                    android:layout_marginTop="@dimen/medium_margin_size"
                    android:layout_marginEnd="@dimen/big_margin_size"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_view_height"
                    android:layout_marginStart="@dimen/big_margin_size"
                    android:layout_marginTop="@dimen/top_view_margin_size"
                    android:layout_marginEnd="@dimen/big_margin_size"
                    android:layout_marginBottom="@dimen/big_margin_size"
                    android:weightSum="2"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/try_again"
                        android:layout_width="0dp"
                        style="@style/ButtonView"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@android:color/white"
                        android:text="@string/try_again"/>
                <TextView
                        android:id="@+id/continue_guest"
                        android:layout_width="0dp"
                        style="@style/ButtonView"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/back_button"
                        android:backgroundTint="@color/colorPrimary"
                        android:gravity="center"
                        android:text="@string/continue_as_guest"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:layout_marginStart="@dimen/small_margin_size"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>