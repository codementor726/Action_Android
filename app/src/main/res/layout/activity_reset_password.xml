<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.auth.ResetPasswordActivity"
        android:background="@drawable/img_background">
    <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/medium_img_item_size"
            android:layout_height="@dimen/medium_img_item_size"
            android:src="@drawable/back"
            android:layout_marginStart="@dimen/medium_margin_size"
            android:layout_marginTop="@dimen/medium_margin_size"/>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            card_view:cardBackgroundColor="@android:color/white"
            card_view:cardCornerRadius="@dimen/radius_value"
            card_view:cardElevation="0dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/big_margin_size"
            android:layout_marginEnd="@dimen/big_margin_size" xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/reset_password"
                    android:gravity="center"
                    style="@style/TitleText"
                    android:textColor="@android:color/black"
                    android:textSize="23sp"
                    android:layout_marginStart="@dimen/big_margin_size"
                    android:layout_marginTop="@dimen/bigger_margin_size"
                    android:layout_marginEnd="@dimen/big_margin_size"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/DescriptionView"
                    android:text="@string/please_enter_email"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:layout_marginStart="@dimen/big_margin_size"
                    android:layout_marginTop="@dimen/medium_margin_size"
                    android:layout_marginEnd="@dimen/big_margin_size"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/MainText"
                    android:text="@string/email_or_account"
                    android:gravity="center|left"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:layout_marginStart="@dimen/big_margin_size"
                    android:layout_marginTop="@dimen/big_margin_size"
                    android:layout_marginEnd="@dimen/big_margin_size"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_view_height"
                    style="@style/BorderInputText"
                    android:layout_marginStart="@dimen/big_margin_size"
                    android:layout_marginTop="@dimen/mini_margin_size"
                    android:inputType="text"
                    android:layout_marginEnd="@dimen/big_margin_size"/>
            <TextView
                    android:id="@+id/sendLink"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bar_view_height"
                    style="@style/ButtonView"
                    android:background="@drawable/back_button"
                    android:layout_marginStart="@dimen/big_margin_size"
                    android:layout_marginTop="@dimen/top_view_margin_size"
                    android:layout_marginEnd="@dimen/big_margin_size"
                    android:layout_marginBottom="@dimen/bigger_margin_size"
                    android:text="@string/send_reset_line"
                    android:textAllCaps="false"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>