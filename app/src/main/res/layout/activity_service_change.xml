<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.service.ServiceChangeActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">
        <com.actionCartingEnvironmental.action.view.TitleView
                android:layout_width="match_parent"
                android:layout_height="@dimen/bar_view_height"
                app:title="@string/service_change"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/site"
                style="@style/DescriptionView"
                android:layout_marginTop="@dimen/small_margin_size"
                android:layout_marginStart="@dimen/small_margin_size"/>
        <com.actionCartingEnvironmental.action.view.ServiceSpinner
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_view_height"
                android:layout_margin="@dimen/small_margin_size"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/DescriptionView"
                android:text="@string/describe_change"
                android:layout_marginTop="@dimen/small_margin_size"
                android:layout_marginStart="@dimen/small_margin_size"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/area_view_height"
                style="@style/BorderInputText"
                android:layout_margin="@dimen/small_margin_size"/>
    </LinearLayout>
    <TextView
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:backgroundTint="@color/colorPrimary"
            style="@style/ButtonView"
            android:text="@string/submit_request"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="@dimen/item_view_height"
            android:layout_marginStart="@dimen/small_margin_size"
            android:layout_marginEnd="@dimen/small_margin_size"
            android:layout_marginBottom="@dimen/big_margin_size"/>
</androidx.constraintlayout.widget.ConstraintLayout>