<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_background"
        tools:context=".activity.auth.SplashActivity">
        <ImageView
            android:layout_width="@dimen/bigger_img_item_size"
            android:layout_height="@dimen/bigger_img_item_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/big_img_item_size"
            android:src="@drawable/img_splash"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/big_img_item_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <ImageView
                android:id="@+id/line"
                android:layout_width="@dimen/line_height"
                android:layout_height="match_parent"
                android:src="@android:color/white"
                android:layout_centerInParent="true"
                android:paddingTop="@dimen/big_margin_size"
                android:paddingBottom="@dimen/big_margin_size"/>
            <ImageView
                    android:layout_width="@dimen/big_img_item_size"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_action_logo"
                    android:layout_centerInParent="true"
                    android:paddingTop="@dimen/medium_margin_size"
                    android:paddingBottom="@dimen/medium_margin_size"
                    android:layout_toLeftOf="@id/line"
                    android:layout_marginEnd="@dimen/medium_margin_size"/>
            <ImageView
                    android:layout_width="@dimen/big_img_item_size"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_blue_iws_logo"
                    android:layout_centerInParent="true"
                    android:paddingTop="@dimen/medium_margin_size"
                    android:paddingBottom="@dimen/medium_margin_size"
                    android:layout_toRightOf="@id/line"
                    android:layout_marginStart="@dimen/medium_margin_size"/>
        </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>