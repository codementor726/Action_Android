<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/dialog_labor">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="@dimen/medium_margin_size"
            android:background="@drawable/back_smooth_dialog">
        <ImageView
            android:layout_width="@dimen/big_img_item_size"
            android:layout_height="@dimen/big_img_item_size"
            android:src="@drawable/img_labor"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/big_margin_size"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TitleText"
            android:text="@string/labor_schedule"
            android:layout_marginTop="@dimen/medium_margin_size"
            android:gravity="center"/>
        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/DescriptionView"
            android:gravity="center"
            android:layout_marginTop="@dimen/medium_margin_size"
            android:layout_marginEnd="@dimen/small_margin_size"
            android:layout_marginStart="@dimen/small_margin_size"/>
        <TextView
            android:id="@+id/done"
            android:layout_width="match_parent"
            style="@style/ButtonView"
            android:backgroundTint="@color/colorPrimary"
            android:text="@string/done"
            android:layout_height="@dimen/item_view_height"
            android:layout_margin="@dimen/medium_margin_size"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>