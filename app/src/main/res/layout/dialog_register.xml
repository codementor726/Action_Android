<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/small_margin_size"
        android:id="@+id/dialog_register">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/medium_margin_size"
            android:layout_marginEnd="@dimen/medium_margin_size"
            android:background="@drawable/back_smooth_dialog">
        <include layout="@layout/include_register"></include>
    </LinearLayout>
    <ImageView
            android:id="@+id/close"
            android:layout_width="@dimen/medium_item_view_height"
            android:layout_height="@dimen/medium_item_view_height"
            android:src="@drawable/img_close"
            android:layout_marginTop="@dimen/small_margin_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>