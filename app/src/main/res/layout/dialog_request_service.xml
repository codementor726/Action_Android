<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/transparent"
        android:id="@+id/dialog_service">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="@dimen/medium_margin_size"
                android:background="@drawable/back_smooth_dialog">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/back_top_round_shape">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/bar_view_height"
                        android:layout_marginTop="@dimen/medium_margin_size"
                        android:layout_marginBottom="@dimen/small_margin_size"
                        android:src="@drawable/img_truck"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TitleText"
                        android:text="@string/request_service"
                        android:gravity="center"
                        android:layout_marginBottom="@dimen/small_margin_size"/>
            </LinearLayout>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:src="@android:color/darker_gray"/>
            <FrameLayout
                    android:id="@+id/bulk_pickup"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bar_view_height">
                <ImageView
                        android:layout_width="@dimen/img_item_size"
                        android:layout_height="match_parent"
                        android:src="@drawable/img_bluk_pick"
                        android:layout_marginStart="@dimen/big_margin_size"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        style="@style/MainText"
                        android:layout_marginStart="@dimen/mid_big_margin_size"
                        android:textColor="@android:color/black"
                        android:text="@string/bulk_pickup"
                        android:gravity="center"
                />
            </FrameLayout>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:src="@android:color/darker_gray"/>
            <FrameLayout
                    android:id="@+id/addtional_pickup"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bar_view_height">
                <ImageView
                        android:layout_width="@dimen/img_item_size"
                        android:layout_height="match_parent"
                        android:src="@drawable/img_additional_pick"
                        android:layout_marginStart="@dimen/big_margin_size"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        style="@style/MainText"
                        android:layout_marginStart="@dimen/mid_big_margin_size"
                        android:textColor="@android:color/black"
                        android:text="@string/addtional_pickup"
                        android:gravity="center"
                />
            </FrameLayout>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:src="@android:color/darker_gray"/>
            <FrameLayout
                    android:id="@+id/missed_pickup"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bar_view_height">
                <ImageView
                        android:layout_width="@dimen/img_item_size"
                        android:layout_height="match_parent"
                        android:src="@drawable/img_miss_pick"
                        android:layout_marginStart="@dimen/big_margin_size"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        style="@style/MainText"
                        android:layout_marginStart="@dimen/mid_big_margin_size"
                        android:textColor="@android:color/black"
                        android:text="@string/missed_pickup"
                        android:gravity="center"
                />
            </FrameLayout>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:src="@android:color/darker_gray"/>
            <FrameLayout
                    android:id="@+id/order_new"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bar_view_height">
                <ImageView
                        android:layout_width="@dimen/img_item_size"
                        android:layout_height="match_parent"
                        android:src="@drawable/img_new_container"
                        android:layout_marginStart="@dimen/big_margin_size"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        style="@style/MainText"
                        android:layout_marginStart="@dimen/mid_big_margin_size"
                        android:textColor="@android:color/black"
                        android:text="@string/order_new_container"
                        android:gravity="center"
                />
            </FrameLayout>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:src="@android:color/darker_gray"/>
            <FrameLayout
                    android:id="@+id/existing_container"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="@dimen/medium_margin_size"
                    android:layout_height="@dimen/bar_view_height">
                <ImageView
                        android:layout_width="@dimen/img_item_size"
                        android:layout_height="match_parent"
                        android:src="@drawable/img_existing_container"
                        android:layout_marginStart="@dimen/big_margin_size"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        style="@style/MainText"
                        android:layout_marginStart="@dimen/mid_big_margin_size"
                        android:textColor="@android:color/black"
                        android:text="@string/existing_container"
                        android:gravity="center"
                />
            </FrameLayout>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:src="@android:color/darker_gray"/>
            <FrameLayout
                    android:id="@+id/service_change"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bar_view_height">
                <ImageView
                        android:layout_width="@dimen/img_item_size"
                        android:layout_height="match_parent"
                        android:src="@drawable/img_service_change"
                        android:layout_marginStart="@dimen/big_margin_size"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        style="@style/MainText"
                        android:layout_marginStart="@dimen/mid_big_margin_size"
                        android:textColor="@android:color/black"
                        android:text="@string/service_change"
                        android:gravity="center"
                />
            </FrameLayout>
        </LinearLayout>
    <ImageView
            android:id="@+id/close"
            android:layout_width="@dimen/medium_item_view_height"
            android:layout_height="@dimen/medium_item_view_height"
            android:src="@drawable/img_close"
            android:layout_marginEnd="@dimen/small_margin_size"
            android:layout_marginTop="@dimen/small_margin_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>