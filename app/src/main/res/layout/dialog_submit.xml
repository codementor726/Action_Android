<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/medium_margin_size"
        android:id="@+id/dialog_submit_request"
        android:background="@drawable/back_smooth_dialog">
    <ImageView
        android:layout_width="@dimen/big_img_item_size"
        android:layout_height="@dimen/big_img_item_size"
        android:src="@drawable/img_submit"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/big_margin_size"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TitleText"
        android:text="@string/submit_request"
        android:layout_marginTop="@dimen/medium_margin_size"
        android:gravity="center"/>
    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        style="@style/DescriptionView"
        android:textSize="@dimen/main_text_size"
        android:text="@string/team_member_touch"
        android:layout_marginTop="@dimen/medium_margin_size"
        android:layout_marginEnd="@dimen/small_margin_size"
        android:layout_marginStart="@dimen/small_margin_size"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_view_height"
            android:layout_marginStart="@dimen/small_margin_size"
            android:layout_marginTop="@dimen/top_view_margin_size"
            android:layout_marginEnd="@dimen/small_margin_size"
            android:layout_marginBottom="@dimen/big_margin_size"
            android:weightSum="2"
            android:orientation="horizontal">
        <TextView
                android:id="@+id/view_request"
                android:layout_width="0dp"
                style="@style/ButtonView"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:text="@string/view_request"/>
        <TextView
                android:id="@+id/return_dashboard"
                android:layout_width="0dp"
                style="@style/ButtonView"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/back_button"
                android:backgroundTint="@color/colorPrimary"
                android:gravity="center"
                android:text="@string/return_dashboard"
                android:textColor="@android:color/white"
                android:textSize="@dimen/small_text_size"
                android:layout_marginStart="@dimen/small_margin_size"/>
    </LinearLayout>
</LinearLayout>