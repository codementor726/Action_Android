<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.auth.RegisterActivity"
        android:background="@drawable/img_background">
    <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/medium_img_item_size"
            android:layout_height="@dimen/medium_img_item_size"
            android:src="@drawable/back"
            android:layout_marginStart="@dimen/medium_margin_size"
            android:layout_marginTop="@dimen/medium_margin_size"/>
    <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/include_login_details"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/big_margin_size"
            android:layout_marginEnd="@dimen/big_margin_size"></include>
</FrameLayout>