<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back_top_round_shape"
        android:backgroundTint="@color/colorBlackMask"
        android:layout_marginEnd="@dimen/top_view_margin_size"
        android:layout_marginStart="@dimen/top_view_margin_size"
        android:orientation="vertical"
        android:layout_gravity="bottom"
>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/small_item_view_height"
                android:layout_marginStart="@dimen/medium_margin_size"
                android:layout_marginTop="@dimen/small_margin_size"
                style="@style/MainText"
                android:layout_gravity="left"
                android:textColor="@android:color/white"
                android:textSize="@dimen/medium_text_size"
                android:text="Cate Herieta"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/small_item_view_height"
                android:layout_marginEnd="@dimen/medium_margin_size"
                android:layout_marginTop="@dimen/small_margin_size"
                android:layout_gravity="bottom|right"
                style="@style/MainText"
                android:gravity="center|bottom"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/main_text_size"
                android:text="#00652437"/>
    </FrameLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/small_item_view_height"
            android:layout_marginEnd="@dimen/medium_margin_size"
            android:layout_marginTop="@dimen/small_margin_size"
            android:layout_marginStart="@dimen/medium_margin_size"
            android:layout_alignParentRight="true"
            style="@style/MainText"
            android:gravity="center|bottom"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/small_text_size"
            android:text="546 Summer Street"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/small_item_view_height"
            android:layout_marginEnd="@dimen/medium_margin_size"
            android:layout_marginStart="@dimen/medium_margin_size"
            android:layout_alignParentRight="true"
            style="@style/MainText"
            android:gravity="center|bottom"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/small_text_size"
            android:text="Somerville NY54527"/>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/medium_margin_size">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/small_item_view_height"
                android:layout_marginStart="@dimen/medium_margin_size"
                style="@style/MainText"
                android:gravity="center|bottom"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/small_text_size"
                android:text="(456)789 1234"/>
        <TextView
                android:id="@+id/change_site"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/small_item_view_height"
                android:layout_marginEnd="@dimen/medium_margin_size"
                android:layout_gravity="right"
                style="@style/MainText"
                android:gravity="center|bottom"
                android:textColor="@android:color/white"
                android:textSize="@dimen/main_text_size"
                android:text="@string/change_default_site"/>
        <ImageView
                android:layout_width="@dimen/small_margin_size"
                android:layout_height="@dimen/small_item_view_height"
                android:layout_marginEnd="@dimen/mini_margin_size"
                android:paddingTop="@dimen/mini_margin_size"
                android:layout_gravity="center"
                android:src="@drawable/img_exchange"
        />
    </FrameLayout>
</LinearLayout>