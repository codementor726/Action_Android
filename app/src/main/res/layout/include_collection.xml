<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/top_view_margin_size"
    android:layout_marginStart="@dimen/small_margin_size"
    android:layout_marginEnd="@dimen/small_margin_size"
    android:background="@drawable/back_edittext">
    <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_margin_size"
            android:layout_marginTop="@dimen/medium_margin_size"
            style="@style/MainText"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:text="@string/collection_reminder"
    />
    <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_margin_size"
            style="@style/MainText"
            android:gravity="center"
            android:layout_below="@id/title"
            android:textColor="@android:color/darker_gray"
            android:text="@string/collection_reminder"
    />
    <com.actionCartingEnvironmental.action.view.ServiceSpinner
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_view_height"
            android:layout_below="@id/description"
            android:layout_margin="@dimen/small_margin_size"/>
    <Switch
            android:id="@+id/selection"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/medium_img_item_size"
            android:layout_marginTop="@dimen/medium_margin_size"
            android:layout_alignParentRight="true"/>
</RelativeLayout>