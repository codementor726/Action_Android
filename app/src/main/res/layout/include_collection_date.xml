<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_margin_size"
        android:layout_marginEnd="@dimen/small_margin_size"
        android:layout_marginTop="@dimen/medium_margin_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selection_layout"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="@dimen/radius_value" >
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
                android:id="@+id/collection_date_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/medium_margin_size"
                android:layout_marginStart="@dimen/medium_margin_size"
                android:layout_marginEnd="@dimen/medium_margin_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            <TextView
                    android:id="@+id/next_collection_string"
                    android:layout_width="match_parent"
                    style="@style/DescriptionView"
                    android:layout_height="wrap_content"
                    android:text="@string/next_collection"/>
            <TextView
                    android:id="@+id/next_collection"
                    android:layout_width="match_parent"
                    style="@style/TitleText"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    tools:text="Friday, September,19"
                    android:layout_below="@id/next_collection_string"/>
            <ImageView
                    android:layout_width="@dimen/img_item_size"
                    android:layout_height="@dimen/img_item_size"
                    android:padding="@dimen/mini_margin_size"
                    android:src="@drawable/img_right_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"/>
            <ImageView
                    android:id="@+id/calendar"
                    android:layout_width="@dimen/medium_item_view_height"
                    android:layout_height="@dimen/medium_item_view_height"
                    android:src="@drawable/img_calendar"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="@dimen/medium_margin_size"/>
        </RelativeLayout>
        <TextView
                android:id="@+id/collection_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_margin_size"
                android:layout_marginEnd="@dimen/small_margin_size"
                android:layout_marginTop="@dimen/top_view_margin_size"
                android:gravity="center"
                style="@style/DescriptionView"
                android:text="Place by curb for collections after 4pm TONIGHT."
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toBottomOf="@id/collection_date_layout"
        />
        <LinearLayout
                android:id="@+id/linearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_margin_size"
                android:layout_marginStart="@dimen/small_margin_size"
                android:layout_marginEnd="@dimen/small_margin_size"
                android:orientation="horizontal"
                android:weightSum="4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toBottomOf="@id/collection_time">
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/mini_margin_size"
                    android:background="@drawable/back_border" >
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/medium_item_view_height"
                        android:layout_marginTop="@dimen/medium_margin_size"
                        android:src="@drawable/img_trash"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/MainText"
                        android:textColor="@android:color/black"
                        android:text="@string/trash"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/mini_margin_size"
                        android:layout_marginBottom="@dimen/small_margin_size"
                        android:textSize="@dimen/mini_text_size"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/mini_margin_size"
                    android:background="@drawable/back_border" >
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/medium_item_view_height"
                        android:layout_marginTop="@dimen/medium_margin_size"
                        android:src="@drawable/img_recycle"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/MainText"
                        android:textColor="@android:color/black"
                        android:text="@string/recycling"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/mini_margin_size"
                        android:layout_marginBottom="@dimen/small_margin_size"
                        android:textSize="@dimen/mini_text_size"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/mini_margin_size"
                    android:background="@drawable/back_border" >
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/medium_item_view_height"
                        android:layout_marginTop="@dimen/medium_margin_size"
                        android:src="@drawable/img_cardboard"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/MainText"
                        android:textColor="@android:color/black"
                        android:text="@string/cardboard"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/mini_margin_size"
                        android:layout_marginBottom="@dimen/small_margin_size"
                        android:textSize="@dimen/mini_text_size"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/mini_margin_size"
                    android:background="@drawable/back_border" >
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/medium_item_view_height"
                        android:layout_marginTop="@dimen/medium_margin_size"
                        android:src="@drawable/img_compost"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/MainText"
                        android:textColor="@android:color/black"
                        android:text="@string/compost"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/mini_margin_size"
                        android:layout_marginBottom="@dimen/small_margin_size"
                        android:textSize="@dimen/mini_text_size"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
                android:id="@+id/request_service"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bar_view_height"
                style="@style/MainText"
                android:layout_marginTop="@dimen/top_view_margin_size"
                android:background="@drawable/back_shape"
                android:textColor="@android:color/black"
                android:text="@string/request_service"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toBottomOf="@id/linearlayout"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>