<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/big_img_item_size"
    android:background="@drawable/back_edittext"
    android:layout_margin="@dimen/medium_margin_size"
    >
    <ImageView
            android:layout_width="@dimen/bar_view_height"
            android:layout_height="@dimen/bar_view_height"
            android:src="@drawable/img_helpcenter"
            android:layout_gravity="center|left"
            android:layout_marginStart="@dimen/medium_margin_size"
    />
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/biggest_margin_size"
            android:layout_marginTop="@dimen/main_text_size"
            android:layout_marginEnd="@dimen/big_margin_size"
            android:orientation="vertical">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/MainText"
                android:text="@string/browse_help_center"
                android:textSize="@dimen/main_text_size"
                android:textColor="@android:color/black"
                android:gravity="center|left"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/MainText"
                android:text="@string/find_answers"
                android:textSize="@dimen/main_text_size"
                android:textColor="@android:color/darker_gray"
                android:gravity="center|left"
        />
    </LinearLayout>
    <ImageView
            android:layout_width="@dimen/small_item_view_height"
            android:layout_height="@dimen/small_item_view_height"
            android:src="@drawable/img_right_arrow"
            android:layout_gravity="center|right"
            android:layout_marginEnd="@dimen/small_margin_size"
    />
</FrameLayout>