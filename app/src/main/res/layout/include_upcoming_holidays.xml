<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_margin_size"
        android:layout_marginEnd="@dimen/small_margin_size"
        android:layout_marginTop="@dimen/medium_margin_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selection_layout"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="@dimen/radius_value"
        card_view:cardElevation="0dp" >
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/medium_margin_size">
        <RelativeLayout
                android:id="@+id/collection_date_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/medium_margin_size"
                android:layout_marginStart="@dimen/medium_margin_size"
                android:layout_marginEnd="@dimen/medium_margin_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            <TextView
                    android:id="@+id/next_collection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TitleText"
                    android:textColor="@android:color/black"
                    android:text="Friday, September,19"
                    />
            <ImageView
                    android:layout_width="@dimen/small_margin_size"
                    android:layout_height="@dimen/small_margin_size"
                    android:src="@drawable/img_right_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"/>
            <ImageView
                    android:id="@+id/calendar"
                    android:layout_width="@dimen/medium_item_view_height"
                    android:layout_height="@dimen/medium_item_view_height"
                    android:src="@drawable/img_calendar"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="@dimen/medium_margin_size"/>
        </RelativeLayout>
        <LinearLayout
                android:id="@+id/linearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/top_view_margin_size"
                android:layout_marginStart="@dimen/small_margin_size"
                android:layout_marginEnd="@dimen/small_margin_size"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toBottomOf="@id/collection_date_layout">
            <LinearLayout
                    android:layout_width="@dimen/date_item_width"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/MainText"
                        android:textColor="@android:color/black"
                        tools:text="19"
                        android:gravity="center"
                        />
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/DescriptionView"
                        android:text="Nov"
                        android:gravity="center"
                />
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_view_height"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/mini_margin_size"
                    android:layout_gravity="center"
                    android:background="@drawable/back_border" >
                <ImageView
                        android:layout_width="@dimen/medium_img_item_size"
                        android:layout_height="@dimen/medium_img_item_size"
                        android:src="@drawable/img_holiday"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="@dimen/small_margin_size"
                        />
                <ImageView
                        android:layout_width="@dimen/img_item_size"
                        android:layout_height="@dimen/img_item_size"
                        android:src="@drawable/img_top_arrow_primary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginEnd="@dimen/small_margin_size"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/MainText"
                        android:textColor="@android:color/black"
                        android:text="@string/thanks_giving"
                        android:gravity="center|left"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="@dimen/bigger_margin_size"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/linearlayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_margin_size"
                android:layout_marginEnd="@dimen/small_margin_size"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toBottomOf="@id/linearlayout">
            <LinearLayout
                    android:layout_width="@dimen/date_item_width"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/MainText"
                        android:textColor="@android:color/black"
                        android:text="25"
                        android:gravity="center"
                />
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/DescriptionView"
                        android:textColor="@android:color/darker_gray"
                        android:text="Dec"
                        android:gravity="center"
                />

            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_view_height"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/mini_margin_size"
                    android:layout_gravity="center"
                    android:background="@drawable/back_border" >
                <ImageView
                        android:layout_width="@dimen/medium_img_item_size"
                        android:layout_height="@dimen/medium_img_item_size"
                        android:src="@drawable/img_holiday"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="@dimen/small_margin_size"
                />
                <ImageView
                        android:layout_width="@dimen/img_item_size"
                        android:layout_height="@dimen/img_item_size"
                        android:src="@drawable/img_top_arrow_primary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginEnd="@dimen/small_margin_size"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/MainText"
                        android:textColor="@android:color/black"
                        android:text="@string/chrismas"
                        android:gravity="center|left"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="@dimen/bigger_margin_size"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/linearlayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_margin_size"
                android:layout_marginEnd="@dimen/small_margin_size"
                android:layout_marginBottom="@dimen/small_margin_size"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toBottomOf="@id/linearlayout1">
            <LinearLayout
                    android:layout_width="@dimen/date_item_width"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/MainText"
                        android:textColor="@android:color/black"
                        android:text="1"
                        android:gravity="center"
                />
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/DescriptionView"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="@dimen/main_text_size"
                        android:text="Jan"
                        android:gravity="center"
                />

            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_view_height"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/mini_margin_size"
                    android:layout_gravity="center"
                    android:background="@drawable/back_border" >
                <ImageView
                        android:layout_width="@dimen/medium_img_item_size"
                        android:layout_height="@dimen/medium_img_item_size"
                        android:src="@drawable/img_holiday"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="@dimen/small_margin_size"
                />
                <ImageView
                        android:layout_width="@dimen/img_item_size"
                        android:layout_height="@dimen/img_item_size"
                        android:src="@drawable/img_top_arrow_primary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginEnd="@dimen/small_margin_size"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:text="@string/new_year_day"
                        style="@style/MainText"
                        android:gravity="center|left"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="@dimen/bigger_margin_size"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>