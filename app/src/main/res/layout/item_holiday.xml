<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_view_height"
        android:layout_marginTop="@dimen/small_margin_size"
        android:layout_marginEnd="@dimen/small_margin_size"
        android:layout_marginStart="@dimen/small_margin_size"
        android:background="@drawable/back_border" >
    <ImageView
            android:layout_width="@dimen/medium_img_item_size"
            android:layout_height="@dimen/medium_img_item_size"
            android:src="@drawable/img_holiday"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="@dimen/small_margin_size"
    />
    <ImageView
            android:layout_width="@dimen/img_item_size"
            android:layout_height="@dimen/img_item_size"
            android:src="@drawable/img_top_arrow_primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="@dimen/small_margin_size"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/MainText"
            android:textColor="@android:color/black"
            android:text="@string/thanks_giving"
            android:gravity="center|left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="@dimen/bigger_margin_size"/>
</androidx.constraintlayout.widget.ConstraintLayout>