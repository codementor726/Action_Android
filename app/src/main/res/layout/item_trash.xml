<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin_size"
        android:layout_marginEnd="@dimen/small_margin_size"
        android:layout_marginStart="@dimen/small_margin_size"
        android:orientation="vertical">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_view_height"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:background="@drawable/back_border" >
        <ImageView
                android:layout_width="@dimen/small_item_view_height"
                android:layout_height="@dimen/small_item_view_height"
                android:layout_gravity="center"
                android:src="@drawable/img_trash"
                android:layout_marginStart="@dimen/small_margin_size"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/MainText"
                android:textColor="@android:color/black"
                android:text="@string/trash"
                android:gravity="center|left"
                android:layout_marginStart="@dimen/medium_margin_size"/>
    </LinearLayout>
</LinearLayout>