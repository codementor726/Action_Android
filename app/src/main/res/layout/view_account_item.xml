<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:background="@drawable/back_no_border_edittext"
             android:backgroundTint="@color/colorBlackMask"
             android:layout_height="match_parent">
    <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/small_item_view_height"
            android:layout_height="@dimen/small_item_view_height"
            android:layout_gravity="center|left"
            android:layout_marginStart="@dimen/medium_margin_size"/>
    <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/main_text_size"
            android:textColor="@android:color/white"
            android:gravity="center|left"
            tools:text="@string/sample"
            android:layout_gravity="center|left"
            android:layout_marginStart="@dimen/item_view_height"
            style="@style/TitleText"/>
    <ImageView
            android:layout_width="@dimen/img_item_size"
            android:layout_height="@dimen/img_item_size"
            android:layout_gravity="center|right"
            android:layout_marginEnd="@dimen/medium_margin_size"
            android:src="@drawable/img_right_arrow"/>
</FrameLayout>