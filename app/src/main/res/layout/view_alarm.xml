<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back_edittext">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
        <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/medium_margin_size"
                android:layout_marginTop="@dimen/medium_margin_size"
                style="@style/MainText"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text="@string/collection_reminder"
        />
        <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/medium_margin_size"
                android:layout_marginBottom="@dimen/medium_margin_size"
                style="@style/MainText"
                android:gravity="center"
                android:textColor="@android:color/darker_gray"
                android:text="@string/collection_reminder"
        />
    </LinearLayout>
    <Switch
            android:id="@+id/selection"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/medium_img_item_size"
            android:layout_gravity="center|right"
            android:layout_marginEnd="@dimen/small_margin_size"/>
</FrameLayout>