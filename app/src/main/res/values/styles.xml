<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>
    </style>
    <style name="TitleText" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/bigger_text_size</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="WTitleText" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/bigger_text_size</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="InputText" parent="android:Widget.EditText">
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:max">1</item>
    </style>
    <style name="BorderInputText" parent="android:Widget.EditText">
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/back_edittext</item>
        <item name="android:padding">@dimen/mini_margin_size</item>
    </style>
    <style name="ButtonView" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/back_button</item>
    </style>
    <style name="DescriptionView" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>
    <style name="MainText" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>
</resources>
